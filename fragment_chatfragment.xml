<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFiles.Chatfragment"
    android:background="@drawable/background_color"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/chatrecyclerview"
       android:layout_marginBottom="70dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:weightSum="10">

    <EditText
        android:id="@+id/sendmsg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:inputType="textLongMessage"
        android:layout_weight="8.5"
        android:background="@drawable/edittextroundedcorners"
        android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
        android:drawableRight="@drawable/ic_attach_file_black_24dp"
        android:hint="   Type a Message..."
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="#000"
        android:textSize="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_send_black_24dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/sendbtn"/>
</LinearLayout>

</FrameLayout>