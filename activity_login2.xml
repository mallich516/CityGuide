<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivity.Login2"
    android:orientation="vertical">

<android.support.design.widget.TabLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/login2tablayout"
    android:background="@drawable/background_color2"
    app:tabIndicatorColor="#5B4365"
    app:tabTextColor="#FF8CD4"
    app:tabSelectedTextColor="#5B4365"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login2viewpage"/>

</LinearLayout>